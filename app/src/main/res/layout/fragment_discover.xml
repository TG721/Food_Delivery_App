<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.element.DiscoverFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.element.DiscoverFragment">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textSize="36sp" />
    <TextView
        android:id="@+id/fastFoodTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fast_food"
        android:textSize="36sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fastFoodRV"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    <TextView
        android:id="@+id/dealsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fresh_deals"
        android:textSize="36sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dealsRV"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    <TextView
        android:id="@+id/healthyTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stay_healthy"
        android:textSize="36sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/healthyRV"
        android:layout_width="match_parent"
        android:layout_height="240dp" />

</LinearLayout>
</androidx.core.widget.NestedScrollView>